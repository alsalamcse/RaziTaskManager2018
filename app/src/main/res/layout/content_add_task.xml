<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".taskfragments.dummy.AddTaskActivity"
    tools:showIn="@layout/activity_add_task">

    <EditText
        android:id="@+id/title_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/text_id"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="Title"
        android:textSize="18dp"
        android:inputType="textPersonName"
        android:text=""
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="38dp" />

    <EditText
        android:id="@+id/text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="93dp"
        android:ems="10"
        android:hint="text"
        android:textSize="18dp"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="112dp" />

    <SeekBar
        android:id="@+id/important_id"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/title_id"
        android:layout_centerVertical="true"
        android:max="10"
        android:progress="3" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/title_id"
        android:layout_marginTop="198dp"
        android:text="Important"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/title_id"
        android:layout_marginBottom="197dp"
        android:text="Necessary"
        android:textSize="20dp" />

    <SeekBar
        android:id="@+id/nec_id"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/title_id"
        android:layout_marginBottom="145dp"
        android:max="10"
        android:progress="3" />

    <Button
        android:id="@+id/save_btn_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/title_id"
        android:layout_marginBottom="67dp"
        android:text="Save" />

    <Button
        android:id="@+id/date_pick_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="-198dp"
        android:layout_marginEnd="25dp"
        android:onClick="onClick"
        android:text="PickDate" />

    <TextView
        android:id="@+id/Date_View"
        android:layout_width="189dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/title_id"
        android:layout_marginTop="148dp"
        android:text="TextView" />

</RelativeLayout>